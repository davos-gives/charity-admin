{{#if isRecurring}}
  <div class="flex mb-6">
    <img src="/img/logo.png" class="w-6 h-6"/>
    <div class="text-white font-hairline ml-4">
      <p><span class="capitalize no-underline">{{update.donor.fname}} {{update.donor.lname}}</span> started a <span class="font-bold no-underline">{{format-currency amount}}</span> recurring gift to <span class="font-bold">{{update.campaign.name}}.</span></p>
      <p class="text-xs font-hairline mt-1">{{moment-from-now time [hideAffix=false]}}</p>
    </div>
  </div>
{{else}}
  <div class="flex mb-6">
    <img src="/img/logo.png" class="w-6 h-6"/>
    <div class="text-white font-hairline ml-4 ">
      <p><span class="capitalize no-underline">{{update.donor.fname}} {{update.donor.lname}}</span> Donated <span class="font-bold">{{format-currency amount}}</span> to <span class="font-bold">{{update.campaign.name}}</span></p>
      <p class="text-xs font-hairline mt-1">{{moment-from-now (utc update.createdAt [timezone=NorthAmerica/Toronto] [hideAffix=false])}}</p>
    </div>
  </div>
{{/if}}
